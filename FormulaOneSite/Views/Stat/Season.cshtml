@model List<StandingsModel>
@{ 
    ViewData["Title"] = "Standings";
}
@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead><tr><th>Position</th><th>Name</th><th>Surname</th><th>Points</th><th>Team</th><th>Nationality</th></tr></thead>
        @foreach(var result in Model)
        {
            <tr>
                <td>@(1+Model.IndexOf(result)) .</td><td>@result.Driver.GivenName</td><td>@result.Driver.FamilyName</td><td>@result.Points</td><td>@result.Constructors.First().name</td><td>@result.Driver.Nationality</td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-danger">Please try again with different year</div>
}